# ===========================================
# CoinFlip dApp — Environment Variables
# ===========================================
# Copy this file to .env and fill in the values.

# ---- Chain / RPC ----
# Tendermint RPC (used by CosmJS for signing & queries)
# Default: your validator node RPC
AXIOME_RPC_URL=http://49.13.3.227:26657
# LCD REST API (used by indexer for block/tx search)
# Default: your validator node REST
AXIOME_REST_URL=http://49.13.3.227:1317
# Chain ID (confirmed: axiome-1)
AXIOME_CHAIN_ID=axiome-1

# ---- Contract ----
COINFLIP_CONTRACT_ADDR=
LAUNCH_CW20_ADDR=

# ---- Relayer ----
RELAYER_MNEMONIC=
RELAYER_ADDRESS=
TREASURY_ADDRESS=
# Comma-separated list of admin wallet addresses
ADMIN_ADDRESSES=

# ---- Database ----
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/coinflip

# ---- Redis ----
REDIS_URL=redis://localhost:6379

# ---- API Server ----
API_PORT=3001
API_HOST=0.0.0.0
# Local: http://localhost:3000 | Production: https://coinflip.axiome-launch.com
CORS_ORIGIN=http://localhost:3000

# ---- Background Services ----
# Enable chain indexer (event polling). Default: true in production, false in dev.
# IMPORTANT: Only ONE instance should run against a given chain+contract pair.
# Running multiple instances (e.g. dev + prod) will cause orphan cancellation conflicts!
ENABLE_INDEXER=false
# Enable background sweep (auto-reveal, auto-cancel, orphan cleanup). Same warning as above.
ENABLE_BACKGROUND_SWEEP=false

# ---- Frontend ----
# Local: http://localhost:3001 | Production: https://api.coinflip.axiome-launch.com
NEXT_PUBLIC_API_URL=http://localhost:3001
# Local: ws://localhost:3001/ws | Production: wss://api.coinflip.axiome-launch.com/ws
NEXT_PUBLIC_WS_URL=ws://localhost:3001/ws
# Dev frontend + prod API: copy .env.development.local.example → .env.development.local
NEXT_PUBLIC_EXPLORER_URL=https://axiomechain.org
NEXT_PUBLIC_CHAIN_ID=axiome-1
# Production domain (used for OG meta, canonical URL, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_ADDRESS=