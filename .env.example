# ===========================================
# CoinFlip dApp — Environment Variables
# ===========================================
# Copy this file to .env and fill in the values.

# ---- Chain / RPC ----
AXIOME_RPC_URL=http://49.13.3.227:26657
AXIOME_REST_URL=http://49.13.3.227:1317
AXIOME_CHAIN_ID=axiome-1

# ---- Contract ----
COINFLIP_CONTRACT_ADDR=
LAUNCH_CW20_ADDR=

# ---- Relayer ----
RELAYER_MNEMONIC=
RELAYER_ADDRESS=
# Treasury wallet (separate from relayer — requires authz grant to relayer)
TREASURY_ADDRESS=
# Comma-separated list of admin wallet addresses
ADMIN_ADDRESSES=

# ---- Database (Neon PostgreSQL) ----
DATABASE_URL=

# ---- Redis ----
REDIS_URL=redis://localhost:6379

# ---- API Server ----
API_PORT=3001
API_HOST=0.0.0.0
CORS_ORIGIN=
NODE_ENV=production

# ---- Session ----
# MUST be at least 32 random characters. Server will NOT start without it.
SESSION_SECRET=

# ---- Background Services ----
# IMPORTANT: Only ONE instance should run against a given chain+contract pair.
ENABLE_INDEXER=true
ENABLE_BACKGROUND_SWEEP=true

# ---- Frontend ----
NEXT_PUBLIC_API_URL=https://coinflipapi-production.up.railway.app
NEXT_PUBLIC_WS_URL=wss://coinflipapi-production.up.railway.app/ws
NEXT_PUBLIC_EXPLORER_URL=https://axiomechain.org
NEXT_PUBLIC_CHAIN_ID=axiome-1
NEXT_PUBLIC_APP_URL=
NEXT_PUBLIC_ADMIN_ADDRESS=

# ---- Telegram Integration ----
# Bot token from @BotFather (server-side only, used for hash verification)
TELEGRAM_BOT_TOKEN=
# Bot username without @ (frontend — used for the login widget)
NEXT_PUBLIC_TELEGRAM_BOT_NAME=
